// フォローボタン
document.getElementById('follow_action_<%= @user.id %>').innerHTML = "<%= j(render('relationships/follow', user: @user)) %>";

// フォローしているユーザーの数を非同期で変更
if(document.getElementById('followings_count_user_id_<%= current_user.id %>')){
  document.getElementById('followings_count_user_id_<%= current_user.id %>').innerHTML = "<%= j(render('relationships/following_count', user: current_user)) %>";
}

// フォローされているユーザーの数を非同期で変更
document.getElementById('followers_count_user_id_<%= @user.id %>').innerHTML = "<%= j(render('relationships/followers_count', user: @user)) %>";
