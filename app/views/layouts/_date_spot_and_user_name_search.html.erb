<div class="px-20 w-full" style="background-color: #FC9267;">
  <%= form_with url: filter_search_path, method: :get, local: :true do |f| %>
    <%= f.text_field :search_name, class: "my-1 border-b-2 outline-none sm:w-2/4 xl:w-3/4", placeholder: "デートスポット・ユーザーを名前で検索" %> <!-- name_contはnameカラムの単語の一部分を含むものを検索するという意味になります。 -->
    <span class="mx-2">
      <%= radio_button_tag(:select_search_target, "Date", {checked: true}) %>
      <%= label_tag("select_param_radio", "デート", class:"text-white") %>
    </span>
    <span class="mx-2">
      <%= radio_button_tag(:select_search_target, "User") %>
      <%= label_tag("select_param_radio", "ユーザー", class:"text-white") %>
    </span>
      <%= f.submit "検索", class: "btn btn-salmon my-2" %>
  <% end %>
</div>