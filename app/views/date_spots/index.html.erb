<div class="m-5 mt-10 border border-black flex">
  <div class="w-3/12 border border-black">
    <%= render "layouts/date_spot_name_search" %>
    <%= render "layouts/user_name_search" %>
  </div>
  <div class="w-9/12 bg-white">
    <div class="mr-5 ml-5 mb-5 p-5">
      <h1>デートスポット一覧</h1>
      <div class="w-full h-52 bg-gray-700">
        <div class="text-center">デートスポットレビューランキング</div>
      </div>
      <%= render "date_spots/date_spot_sort_bar" %>
    </div>
    <% if @date_spots == []%>
      <p class="text-red-900 text-center m-10 text-3xl" id="search_result">
        ⚠︎検索結果はありませんでした。
      </p>
    <% else %>
      <% @date_spots.each do |date_spot| %>
        <%= render "date_spots/date_spot_profile", date_spot: date_spot %>
      <% end %>
    <% end %>
  </div>
</div>
