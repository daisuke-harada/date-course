<div class="max-w-xl mx-auto mt-10 bg-white p-5 border-gray-900">
  <h1 class="text-center text-lg m-5 mb-5">デートスポット新規登録</h1>
  <%= form_with(model: @date_spot, local: true) do |f| %>
    <%= render 'shared/error_messages', target: @date_spot %>
    <%= f.label :name, "デートスポット名" %>
    <%= f.text_field :name, class: "mb-5 border-b-2 outline-none w-full" %>

    <%= f.label :address, "住所" %><br/>
    <%= f.fields_for :address do |address| %>
      <%= address.grouped_collection_select(:prefecture_id, Area.all, :prefectures, :name, :id, :name, prompt: "都道府県を選択してください") %>
      <%= address.text_field :city_name, class: "mb-5 border-b-2 outline-none w-full" %>
    <% end %>

    <label>営業時間 (始業時間~就業時間)</label><br/>
    <p class="mb-5 border-b-2 outline-none w-5/12">
      <%= f.time_field :opening_time, class: "mr-5" %>~<%= f.time_field :closing_time, class: "ml-5" %>
    </p>

    <%= f.label :image, "サムネイル"%>
    <%= f.file_field :image %>

    <div class="text-center p-1">
      <%= f.submit "登録", class: "btn btn-salmon my-5" %>
    </div>

  <% end %>
</div>
