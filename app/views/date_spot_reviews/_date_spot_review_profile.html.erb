<div class="m-5 p-5 bg-white">
  <div class="flex">
    <div class="w-2/3">
        <div class="m-5">
          <%= date_spot_review.user.name %>
        </div>
        <div class="m-5">
          ⭐️⭐️⭐️⭐️⭐️
        </div>
        <div class="m-5">
          <%= date_spot_review.content%>
        </div>
    </div>
    <div class="w-1/3 p-5">
      <%= link_to user_path(date_spot_review.user) do %>
        <%= render 'users/user_image', {user: date_spot_review.user, width: 250, height: 250}%>
      <% end %>
      <div class="text-center m-5">
        <%= link_to "レビューを編集する", edit_date_spot_review_path(date_spot_review), class:"btn btn-salmon" if current_user %>
      </div>
    </div>
  </div>
</div>