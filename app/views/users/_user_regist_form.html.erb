<div class="user-new-form-area">
    <h1><%= user_input_area_title %></h1>
    <%= form_with(model: user, local: true) do |f|%>
      <%= render 'shared/error_messages', target: user %>
      <%= f.label :name, "名前"%>
      <%= f.text_field :name %>

      <%= f.label :email, "メール" %>
      <%= f.email_field :email %>

      <div class="radio-btn-group">
        <%= f.radio_button :sex, 1 %>
        <%= f.label :sex, "男性", {value: 1} %>
        <%= f.radio_button :sex, 2 %>
        <%= f.label :sex, "女性", {value: 2} %>
      </div>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード(確認)" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :image, "サムネイル"%>
      <%= f.file_field :image %>

      <div class="btn-style">
        <%= f.submit regist_button, class: "normal-btn" %>
      </div>
      <div class="btn-style">
        <%= link_to "退会する", user_path(user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "danger-btn" if logged_in? %>
        <% binding.pry %>
      </div>
    <% end %> 
  </div>