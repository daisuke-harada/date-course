<div class="user-form">
  <h1 class="text-center">ログイン</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |f|%>
    <%= f.label :name, "名前"%>
    <%= f.text_field :name, class: "my-5 w-full border-b-2 outline-none" %>

    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "my-5 w-full border-b-2 outline-none" %>

    <%= f.label :remember_me, class: "-mt-1 mb-1" do%>
      <%= f.check_box :remember_me %>
      <span class="ml-5">次回から自動的にログインする</span>
    <% end %><br/>
    <div class="text-center">
      <%= f.submit "ログイン", class: "btn btn-salmon my-5"%>
    </div>
    <div class="text-center">
      <%= link_to "新規登録はこちら", new_user_path %>
    </div>
  <% end %> 
</div>